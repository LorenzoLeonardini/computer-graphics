---
import Menu from './Menu.astro';
// src/layouts/BaseLayout.astro
const { content } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="theme-color" content="#1f2937">
	<title>{ content.title }{ content.title ? ' | ' : ''}Computer Graphics - A.A. 2021/2022</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css" crossorigin="anonymous">

	<style global>
		@import "../styles/global.css";

		.katex .katex-mathml {
			display: none;
		}

		.menu ul ul li a {
			@apply font-normal text-gray-300;
		}

		.menu a {
			@apply block hover:underline;
		}

		.menu li {
			@apply font-semibold tracking-wide ml-6 before:[content:'-'] relative before:absolute before:-left-3 leading-5 my-1;
		}
	</style>
</head>
<body class="bg-gray-800 antialiased">
<main class="flex flex-col md:flex-row h-screen">
	<input type="checkbox" id="toggleMenu" class="peer hidden">
	<div class="md:hidden flex items-center gap-5 px-4 peer-checked:group">
		<label for="toggleMenu" class="my-3 cursor-pointer w-fit border border-gray-600 rounded-md z-20">
			<div class="mx-2 my-5 w-8 h-0.5 bg-gray-300 relative before:absolute before:w-8 before:h-0.5 before:bg-gray-300 before:-top-2 after:absolute after:w-8 after:h-0.5 after:bg-gray-300 after:-bottom-2"></div>
		</label>
		<div class="md:hidden text-gray-200 font-semibold leading-6 text-lg">{content.title ?? 'Computer Graphics'}</div>
	</div>
	<aside class="absolute md:static origin-left scale-x-0 transition-transform peer-checked:scale-x-100 md:scale-x-100 w-full md:w-1/4 bg-gray-900 py-8 h-full overflow-y-auto scrollbar-thin scrollbar-thumb-gray-700 scrollbar-track-gray-600 z-10">
		<h1 class="text-gray-50 font-extrabold text-2xl text-center w-full">Computer Graphics</h1>
		<div class="menu my-8 ml-4 mr-10 text-gray-200">
			<Menu />
		</div>
	</aside>
	<div class="md:border-t-0 border-t border-t-gray-600 w-full md:w-3/4 h-full overflow-y-auto scrollbar-thin scrollbar-thumb-gray-900 scrollbar-track-gray-700">
		<article class="w-11/12 prose prose-amber prose-invert prose-code:before:hidden prose-code:after:hidden prose-code:font-normal prose-code:text-amber-200 mx-auto mt-6 mb-16 md:my-16 px-1 md:px-0">
			<h1>{content.title ?? 'Computer Graphics - A.A. 2021/2022'}</h1>
			<slot></slot>
		</article>
	</div>
</main>

<a href="https://github.com/LorenzoLeonardini/computer-graphics" target="_blank" rel="noreferrer noopener" class="fixed top-[44px] right-[44px] origin-center translate-x-1/2 -translate-y-1/2 rotate-45 transition-opacity hover:opacity-95 hidden md:block">
	<div class="bg-gray-200 px-40 py-0.5 font-bold text-gray-900 shadow-md shadow-gray-900 flex justify-center items-center gap-1">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-github" viewBox="0 0 16 16">
			<path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
		</svg>
		GitHub
	</div>
</a>
</body>
</html>